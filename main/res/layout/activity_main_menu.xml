<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#000"
    tools:context="com.example.msi.languagemasterapp.MainMenu">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Learning _______!"
        android:layout_centerHorizontal="true"
        android:textSize="24sp"
        android:textColor="#F3FF"
        android:id="@+id/tv_mainmenutitle"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:id="@+id/btn_learn"
        android:text="Learn"
        />

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="35dp"
        android:id="@+id/btn_infolearn"
        android:layout_toRightOf="@id/btn_learn"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="105dp"
        android:background="@drawable/question_icon"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:id="@+id/btn_quiz"
        android:text="Start Quiz"
        android:layout_below="@id/btn_learn"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"/>

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="35dp"
        android:id="@+id/btn_infoquiz"
        android:layout_toRightOf="@id/btn_quiz"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/btn_infolearn"
        android:background="@drawable/question_icon"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:id="@+id/btn_highscore"
        android:text="High Score"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btn_quiz"
        android:layout_marginTop="15dp"/>

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="35dp"
        android:id="@+id/btn_infohighscore"
        android:layout_toRightOf="@id/btn_highscore"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/btn_infoquiz"
        android:background="@drawable/question_icon"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:id="@+id/btn_returncover"
        android:text="Back"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btn_highscore"
        android:layout_marginTop="15dp"/>

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="35dp"
        android:id="@+id/btn_inforeturncover"
        android:layout_toRightOf="@id/btn_returncover"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/btn_infohighscore"
        android:background="@drawable/question_icon"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_infomaindetails"
        android:textColor="#FF00"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"/>

</RelativeLayout>
