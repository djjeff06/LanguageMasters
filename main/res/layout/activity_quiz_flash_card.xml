<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_normal_quiz_flash_card"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#C3D2CA"
    tools:context="com.example.msi.languagemasterapp.QuizFlashCard">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_quiztitle"
        android:text="Quiz?"
        android:textColor="#20AFF4"
        android:textSize="30sp"
        android:layout_marginLeft="80dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_label"
        android:textColor="#20AFF4"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="260dp"
        android:textColor="#20AFF4"
        android:text="Score: 0"
        android:id="@+id/tv_currentscore"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/tv_quizcharacter"
        android:layout_marginTop="60dp"
        android:background="#FFFF"
        android:gravity="center"
        android:text="å¿ "
        android:textSize="50dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/tv_quizpronunciation"
        android:layout_marginTop="150dp"
        android:text="zhong"
        android:background="#FFF"
        android:gravity="center"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="220dp"
        android:id="@+id/btn_quiza"
        android:text="Hello"
        android:textColor="#DDD"
        android:background="#079"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="280dp"
        android:text="Ambition"
        android:id="@+id/btn_quizb"
        android:textColor="#DDD"
        android:background="#079"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="340dp"
        android:id="@+id/btn_quizc"
        android:text="Hi"
        android:textColor="#DDD"
        android:background="#079"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="400dp"
        android:id="@+id/btn_quizd"
        android:text="Loyalty"
        android:textColor="#DDD"
        android:background="#079"/>

</FrameLayout>
