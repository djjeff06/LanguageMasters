<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_name_high_score"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#000"
    tools:context="com.example.msi.languagemasterapp.NameHighScore">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/tv_namehighscoretitle"
        android:text="You beat a new high score!"
        android:textSize="24sp"
        android:textColor="#F3FF"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Name:"
        android:id="@+id/tv_namelabel"
        android:textColor="#F3FF"
        android:textSize="20dp"/>

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="102dp"
        android:layout_toRightOf="@id/tv_namelabel"
        android:layout_marginLeft="20dp"
        android:id="@+id/et_newname"
        android:background="#FFF"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:id="@+id/tv_newscore"
        android:text="Score: 60"
        android:textColor="#F3FF"
        android:textSize="30dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_finishhighscore"
        android:text="Finish"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tv_newscore"
        android:layout_marginTop="20dp"/>

</RelativeLayout>
