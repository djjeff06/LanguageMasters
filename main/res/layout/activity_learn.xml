<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_learn"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#C3D2CA"
    tools:context="com.example.msi.languagemasterapp.LearnActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/sv_learnscroll"></ScrollView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Learn"
        android:gravity="center"
        android:textSize="30sp"
        android:textColor="#20AFF4"
        android:id="@+id/tv_learnlabel"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:background="#FFFAF0"
        android:id="@+id/rl_learncontainer">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:gravity="center"
            android:textSize="70sp"
            android:text=""
            android:id="@+id/tv_learncharacter" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:layout_marginTop="150dp"
            android:id="@+id/tv_learnpronunciation"
            android:text=""
            android:textSize="30sp"/>

    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_learnenglish"
        android:text=""
        android:background="#FFFAF0"
        android:gravity="center"
        android:textSize="30sp"
        android:layout_marginTop="350dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_navigate_back"
        android:id="@+id/iv_learnprev" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_navigate_next"
        android:id="@+id/iv_learnnext"
        android:layout_marginLeft="280dp"/>

</FrameLayout>
